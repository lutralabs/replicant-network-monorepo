{
  "name": "contracts",
  "scripts": {
    "postinstall": "forge install",
    "build": "pnpm build:hardhat && pnpm build:forge",
    "build:hardhat": "hardhat compile",
    "build:forge": "forge build",
    "test": "pnpm test:hardhat && pnpm test:forge",
    "test:hardhat": "hardhat test",
    "test:forge": "forge test",
    "lint": "forge fmt --check && biome check .",
    "lint:fix": "forge fmt && biome check --apply .",
    "deploy:amoy:eeswrapper": "npx hardhat run scripts/deployEESWrapper.ts --network amoy",
    "deploy:local:eeswrapper": "npx hardhat run scripts/deployEESWrapper.ts --network local",
    "upgrade:local:eeswrapper": "npx hardhat run scripts/upgradeEESWrapper.ts --network local",
    "deploy:sepolia:eescore": "npx hardhat ignition deploy ignition/modules/EES.ts --network sepolia --strategy create2",
    "deploy:amoy:eescore": "npx hardhat ignition deploy ignition/modules/EES.ts --network amoy --strategy create2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.1.0",
    "ethers": "^6.12.0",
    "hardhat": "^2.21.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.3"
  }
}
